{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@domain": ["libs/domain/src"],
      "@domain/*": ["libs/domain/src/*"],
      "@services/database": ["src/modules/database/database.service.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
